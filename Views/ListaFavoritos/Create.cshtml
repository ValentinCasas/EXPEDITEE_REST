@model EXPEDITEE_REST.Models.Usuario;

@{
    ViewData["Title"] = "Create";
    var ListaUsuarios = (IList<Usuario>)ViewBag.usuarios;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Crear Lista</h2>

                    <form method="post" asp-action="Create" class="form">
                        <div class="form-group">
                            <label for="Nombre">Nombre:</label>
                            <input type="text" class="form-control" id="Nombre" name="Nombre"
                                placeholder="Ingrese nombre" required>
                        </div>

                        <div class="form-group">
                            <label for="IdCliente">ID de Usuario:</label>
                            <select class="form-control" id="IdCliente" name="IdCliente">
                                <option value="">Seleccione un usuario</option>
                                @foreach (var usuario in ListaUsuarios)
                                {
                                    <option value="@usuario.Id">@usuario.Nombre @usuario.Apellido</option>
                                }
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mt-4">Crear Lista</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

